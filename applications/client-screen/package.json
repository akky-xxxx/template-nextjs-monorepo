{
  "name": "client-screen",
  "version": "0.1.0",
  "scripts": {
    "build": "next build",
    "build-storybook": "storybook build",
    "check-code": "run-p -c lint spell-check",
    "dev": "npm-run-all \"gen:*\" -p \"watch:*\"",
    "fix": "run-p -c \"fix:*\"",
    "fix:eslint-other-than-src": "eslint -c ./eslint.config.other-than-src.mjs \"./\" --max-warnings 0 --fix",
    "fix:eslint-src": "eslint \"./src/\" --max-warnings 0 --fix",
    "fix:fixpack": "fixpack",
    "fix:prettier": "prettier \"./*.{json,toml,yaml,yml}\" \"!pnpm-lock.yaml\" \"!package.json\" -w -u",
    "gen:css": "hcm \"./src/**/*.css\"",
    "lint": "run-p -c \"lint:*\"",
    "lint:eslint-other-than-src": "eslint -c ./eslint.config.other-than-src.mjs \"./\" --max-warnings 0",
    "lint:eslint-src": "eslint \"./src/\" --max-warnings 0",
    "lint:fixpack": "fixpack --dryRun",
    "lint:prettier": "prettier \"./*.{json,toml,yaml,yml}\" \"!pnpm-lock.yaml\" \"!package.json\" -c -u",
    "spell-check": "cspell lint --no-progress \"./**/*.{js,mjs,cjs}\" \"./*.{js,mjs,cjs}\"",
    "start": "next start",
    "storybook": "storybook dev -p 3050",
    "type-check": "tsc",
    "watch:build": "next dev --turbopack",
    "watch:css": "hcm \"./src/**/*.css\" -W"
  },
  "dependencies": {
    "next": "15.2.2",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/addon-onboarding": "^8.6.7",
    "@storybook/blocks": "^8.6.7",
    "@storybook/experimental-addon-test": "^8.6.7",
    "@storybook/experimental-nextjs-vite": "8.6.7",
    "@storybook/react": "^8.6.7",
    "@storybook/test": "^8.6.7",
    "@tsconfig/next": "2.0.3",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitest/browser": "3.0.9",
    "@vitest/coverage-v8": "3.0.9",
    "cspell": "8.17.5",
    "eslint": "9.22.0",
    "eslint-config-sc-all": "0.1.1",
    "eslint-config-sc-jest": "0.1.1",
    "eslint-config-sc-next": "0.1.1",
    "eslint-config-sc-storybook": "0.1.1",
    "eslint-config-sc-ts": "0.1.1",
    "eslint-plugin-storybook": "0.11.6",
    "fixpack": "4.0.0",
    "happy-css-modules": "3.2.0",
    "jest": "29.7.0",
    "npm-run-all2": "7.0.2",
    "playwright": "1.51.1",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "storybook": "^8.6.7",
    "template-nextjs-monorepo": "workspace:*",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "private": true
}
